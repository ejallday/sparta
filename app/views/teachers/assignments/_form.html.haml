.form-container
  = form_for [:teachers, @assignment] do |f|
    .form-group
      = f.label :course_id
      = f.collection_select :course_id, available_courses, :id, :name, class: 'form-control'
    .form-group
      = f.label :name
      = f.text_field :name, class: 'form-control'
    .form-group
      = f.label :description
      = f.text_area :description, cols: "30", rows: "10", class: 'form-control'
    .form-group
      = label_tag :assignment_assigned_on, 'Assigned on'
      = f.date_select :assigned_on, class: 'form-control'
    .form-group
      = label_tag :assignment_due_on, 'Due on'
      = f.date_select :due_on, class: 'form-control'
    .form-group
      = f.label :points_possible
      = f.text_field  :points_possible, class: 'form-control'
    .form-group
      = f.submit class: 'btn btn-primary'
