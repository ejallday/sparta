= form_for [:admin, course] do |f|
  .text-field
    = f.label :name
    = f.text_field :name
  .text-field
    = f.label :period
    = f.text_field :period
  .select-field
    = f.label 'Teacher'
    = f.collection_select :teacher_id, Teacher.all, :id, :full_name
  .submit
    = f.submit
  = link_to t('.delete'), admin_course_path(course), method: :delete, data: { confirm: t('.confirm_delete') }
