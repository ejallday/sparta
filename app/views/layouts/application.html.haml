%html
  %head
    %meta{charset:"utf-8"}/
    %meta{content:"NOODP", name:"ROBOTS"}/
    %title=page_title
    = stylesheet_link_tag :application, media: 'all'
    = stylesheet_link_tag "//netdna.bootstrapcdn.com/bootstrap/3.1.0/css/bootstrap.min.css"
    = csrf_meta_tags
  %body(ng-app="sparta")
