!!!
%html
  %head
    %meta{charset:"utf-8"}/
    %meta{content:"NOODP", name:"ROBOTS"}/
    %title=page_title
    = stylesheet_link_tag :application, media: 'all'
    = csrf_meta_tags
  %header 
    - if signed_in?
      = link_to 'Sign out', sign_out_path, method: :delete
    - else
      = link_to 'Sign in', sign_in_path
      = link_to 'Sign up', sign_up_path
  %body{class: body_class} 
  = render 'flashes'
  = yield
  = render 'javascript'
